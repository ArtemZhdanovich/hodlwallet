<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HodlWallet2.Views.SecurityCenterView"
             xmlns:svg="clr-namespace:HodlWallet2.Utils" BackgroundColor="{StaticResource GrayBackground}"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
             xmlns:controls="clr-namespace:HodlWallet2.Utils;assembly=HodlWallet2" ios:Page.UseSafeArea="true">
    <StackLayout>
        
        <FlexLayout Direction="Row" JustifyContent="SpaceBetween" FlexLayout.AlignSelf="Start" FlexLayout.Grow="1" Margin="10">
            <svg:Icon ResourceId="Assets.close.svg" FlexLayout.AlignSelf="Center">
                <svg:Icon.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCloseTapped"/>
                </svg:Icon.GestureRecognizers>
            </svg:Icon>
                
            <BoxView FlexLayout.AlignSelf="Center" FlexLayout.Grow="1" />
                
            <Label x:Name="SecurityCenterTitle" 
                   Style="{DynamicResource CustomLabel}"
                   FontSize="Medium"
                   FlexLayout.AlignSelf="Center" />
            
            <BoxView FlexLayout.AlignSelf="Center" FlexLayout.Grow="1" />
            
            <svg:Icon ResourceId="Assets.faq.svg" FlexLayout.AlignSelf="Center">
                <svg:Icon.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnFaqTapped"/>
                </svg:Icon.GestureRecognizers>
            </svg:Icon>
        </FlexLayout>
        
            <svg:Icon ResourceId="Assets.shield.svg" 
                      HorizontalOptions="CenterAndExpand" 
                      VerticalOptions="CenterAndExpand"
                      HeightRequest="170"
                      WidthRequest="170"/>
            
            <Label x:Name="ShieldHeader" Style="{DynamicResource CustomLabel}" FontSize="Large" />
            
            <BoxView BackgroundColor="{StaticResource GrayTextTint}" HeightRequest="1" />
            
            <Grid Padding="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <svg:Icon ResourceId="{Binding PinCheck}" 
                          Grid.Row="0"
                          Grid.Column="0"
                          BackgroundColor="Teal"/>
                <Label x:Name="PinCheckHeader" 
                           Style="{DynamicResource CustomLabel}"
                           Grid.Row="0"
                           Grid.Column="1"
                           BackgroundColor="Teal" />
                <Label x:Name="PinCheckDetail" 
                           Style="{DynamicResource CustomLabel}"
                           FontSize="Small"
                           Grid.Row="1"
                           Grid.Column="1"/>
                <svg:Icon ResourceId="{Binding FingerprintCheck}" 
                          Grid.Row="2"
                          Grid.Column="0"/>
                <Label x:Name="FingerprintCheckHeader" 
                           Style="{DynamicResource CustomLabel}"
                           Grid.Row="2"
                           Grid.Column="1"/>
                <Label x:Name="FingerprintCheckDetail" 
                           Style="{DynamicResource CustomLabel}"
                           FontSize="Small"
                           Grid.Row="3"
                           Grid.Column="1"/>
                <svg:Icon ResourceId="{Binding MnemonicCheck}" 
                          Grid.Row="4"
                          Grid.Column="0"/>
                <Label x:Name="MnemonicCheckHeader" 
                           Style="{DynamicResource CustomLabel}"
                           Grid.Row="4"
                           Grid.Column="1"/>
                <Label x:Name="MnemonicCheckDetail" 
                           Style="{DynamicResource CustomLabel}"
                           FontSize="Small"
                           Grid.Row="5"
                           Grid.Column="1"/>
            </Grid>
                    
            <BoxView FlexLayout.Grow="1" />
            
            <BoxView FlexLayout.Grow="1" />
        
    </StackLayout>
</ContentPage>