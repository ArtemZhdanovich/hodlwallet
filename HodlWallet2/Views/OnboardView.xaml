<?xml version="1.0" encoding="UTF-8"?>
<d:BaseView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
            x:Class="HodlWallet2.Views.OnboardView"
            xmlns:d="clr-namespace:HodlWallet2.Views"
            BackgroundColor="{StaticResource GrayBackground}">

    <FlexLayout Direction="Column" AlignItems="Center">
        <Button x:Name="HelpButton"
                Style="{DynamicResource ContextualHelpButton}"
                Clicked="HelpButton_Clicked" />

        <Image Source="logo_front.png"
               Scale="0.5"
               FlexLayout.Grow="8" />

        <FlexLayout FlexLayout.Grow="1" Direction="Row">
            <Button x:Name="CreateButton"
                    Style="{DynamicResource CustomButton}"
                    Text="Create"
                    FontSize="Medium"
                    FlexLayout.Grow="2"
                    Clicked="CreateButton_Clicked" />

            <Button x:Name="RecoverButton"
                    Style="{DynamicResource CustomButton}"
                    Text="Recover"
                    FontSize="Medium"
                    FlexLayout.Grow="2"
                    Clicked="RecoverButton_Clicked" />
        </FlexLayout>
    </FlexLayout>
</d:BaseView>
