<?xml version="1.0" encoding="UTF-8"?>
<views:MvxContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="HodlWallet2.Views.BackupRecoveryConfirmView" 
    xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
    xmlns:viewModels="clr-namespace:HodlWallet2.Core.ViewModels;assembly=HodlWallet2.Core"
    xmlns:bindings="clr-namespace:MvvmCross.Forms.Bindings;assembly=MvvmCross.Forms"
    x:TypeArguments="viewModels:BackupRecoveryConfirmViewModel"
    bindings:Bi.nd="Title BackupTitle">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource DarkGray}" />
                <Setter Property="CornerRadius" Value="0" />
                <Setter Property="FontFamily" Value="{DynamicResource ElectrolizeFont}" />
                <Setter Property="TextColor" Value="{StaticResource White}" />
                <Setter Property="FontSize" Value="Small" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        
        <!-- Add View Model Binding -->
        
        <FlexLayout Direction="Column" BackgroundColor="{StaticResource GrayBackground}" JustifyContent="SpaceAround">
            
            <Label FontFamily="{StaticResource ElectrolizeFont}"
                   TextColor="{StaticResource SyncGradientStart}"
                   HorizontalTextAlignment="Center"
                   FlexLayout.AlignSelf="Center"
                   FlexLayout.Grow="1"
                   bindings:Bi.nd="Text HeaderText"/>
            
            <Label Text="{Binding Exercise}"
                   Style="{DynamicResource CustomLabel}"
                   HorizontalTextAlignment="Center"
                   FlexLayout.AlignSelf="Center" />
            
            <Label FontFamily="{StaticResource ElectrolizeFont}"
                   TextColor="Red"
                   HorizontalTextAlignment="Center"
                   FlexLayout.AlignSelf="Center"
                   bindings:Bi.nd="Text WarningText;
                                   IsVisible WarningVisible"/>
            
            <Grid FlexLayout.Grow="2" FlexLayout.AlignSelf="Center" Padding="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                    
                    <Button Grid.Row="0"
                            Grid.Column="0"
                            Text="{Binding WordOne}"
                            Command="{Binding WordCommand}"
                            CommandParameter="0" />

                    <Button Grid.Row="1"
                            Grid.Column="0"
                            Text="{Binding WordTwo}"
                            Command="{Binding WordCommand}"
                            CommandParameter="1" />

                    <Button Grid.Row="2"
                            Grid.Column="0"
                            Text="{Binding WordThree}"
                            Command="{Binding WordCommand}"
                            CommandParameter="2" />
                    
                    <Button Grid.Row="3"
                            Grid.Column="0"
                            Text="{Binding WordFour}"
                            Command="{Binding WordCommand}"
                            CommandParameter="3" />
                    
                    <Button Grid.Row="0"
                            Grid.Column="1"
                            Text="{Binding WordFive}"
                            Command="{Binding WordCommand}"
                            CommandParameter="4" />

                    <Button Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding WordSix}"
                            Command="{Binding WordCommand}"
                            CommandParameter="5" />

                    <Button Grid.Row="2"
                            Grid.Column="1"
                            Text="{Binding WordSeven}"
                            Command="{Binding WordCommand}"
                            CommandParameter="6" />
                    
                    <Button Grid.Row="3"
                            Grid.Column="1"
                            Text="{Binding WordEight}"
                            Command="{Binding WordCommand}"
                            CommandParameter="7" />
            </Grid>
        
        </FlexLayout>
    
    </ContentPage.Content>
</views:MvxContentPage>
