<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HodlWallet.UI.Controls.BalanceHeader"
             xmlns:vm="clr-namespace:HodlWallet.Core.ViewModels"
             xmlns:i18n="clr-namespace:HodlWallet.UI.Extensions.I18n">
    <ContentView.BindingContext>
        <vm:BalanceHeaderViewModel />
    </ContentView.BindingContext>
    <ContentView.Content>
        <StackLayout Orientation="Horizontal" BackgroundColor="{DynamicResource FgSuccess}">
            <StackLayout Orientation="Horizontal">
                <BoxView HeightRequest="0" WidthRequest="30" />
                <Image Source="wallet.png" HeightRequest="40" WidthRequest="40" />
            </StackLayout>
            <StackLayout Spacing="0" WidthRequest="110" Padding="10,0,0,0">
                <BoxView HeightRequest="10" />
                <Label Text="{i18n:Translate Text=BalanceHeader.total}" TextColor="{DynamicResource Bg}" FontFamily="{StaticResource Key=Sans-Bold}" Margin="0,3,0,0" />
                <Label Text="{i18n:Translate Text=BalanceHeader.balance}" TextColor="{DynamicResource Bg}" FontFamily="{StaticResource Key=Sans-Bold}" Margin="0,-5,0,0" />
                <BoxView HeightRequest="10" />
            </StackLayout>
            <StackLayout Spacing="0">
                <BoxView HeightRequest="10" />
                <Grid RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label x:Name="balanceLabel" Grid.Row="0" Grid.Column="0" Text="{Binding Balance}" TextColor="{DynamicResource Bg}" FontFamily="{StaticResource Key=Mono-Bold}" FontSize="Subtitle" Margin="0,3,0,0" />
                    <Label x:Name="balanceFiatLabel" Grid.Row="1" Grid.Column="0" Text="{Binding BalanceFiat}" TextColor="{DynamicResource Bg}" FontFamily="{StaticResource Key=Mono-Bold}" FontSize="Micro" Margin="0,-4,0,0" />
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SwitchCurrencyCommand}" NumberOfTapsRequired="1" />
                    </Grid.GestureRecognizers>
                </Grid>
                <BoxView HeightRequest="10" />
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>