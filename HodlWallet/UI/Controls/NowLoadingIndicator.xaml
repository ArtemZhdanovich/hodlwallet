<?xml version="1.0" encoding="UTF-8"?>
<AbsoluteLayout xmlns="http://xamarin.com/schemas/2014/forms"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="HodlWallet.UI.Controls.NowLoadingIndicator"
                IsVisible="{Binding IsLoading}"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="All">
    <BoxView BackgroundColor="{DynamicResource Bg}"
             Opacity="0.92"
             AbsoluteLayout.LayoutBounds="0,0,1,1"
             AbsoluteLayout.LayoutFlags="All" />
    <ActivityIndicator IsRunning="{Binding IsLoading}"
                       Scale="1.5"
                       BackgroundColor="Transparent"
                       AbsoluteLayout.LayoutBounds="0.5,0.42,-1,-1"
                       AbsoluteLayout.LayoutFlags="PositionProportional" />
    <Label x:Name="NowLoadingLabel"
           Text="{Binding Text}"
           FontSize="Subtitle"
           HorizontalTextAlignment="Center"
           AbsoluteLayout.LayoutBounds="0.5,0.36,-1,-1"
           AbsoluteLayout.LayoutFlags="PositionProportional" />
</AbsoluteLayout>
