<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:HodlWallet.UI.Extensions.I18n"
             x:Class="HodlWallet.UI.Controls.FlyoutFooter">
    <ContentView.Content>
        <FlexLayout Direction="Column"
                        JustifyContent="SpaceAround">
            
            <Button Text="{i18n:Translate Text=AddAccount.button}"
                    Style="{DynamicResource CustomButton}"
                    FontSize="Medium"
                    FlexLayout.AlignSelf="Stretch"
                    FlexLayout.Grow="1"
                    BackgroundColor="{DynamicResource BackgroundPrimary}" 
                    Clicked="CreateAccountButton_Clicked"
                    HeightRequest="70" />

            <BoxView BackgroundColor="Transparent"
                     HeightRequest="1" />

            <Button Text="{i18n:Translate Text=Settings.button}"
                    Style="{DynamicResource CustomButton}"
                    FontSize="Medium"
                    FlexLayout.AlignSelf="Stretch"
                    FlexLayout.Grow="1"
                    HeightRequest="70"
                    Clicked="SettingsButton_Clicked"
                    BackgroundColor="{DynamicResource BackgroundPrimary}" />
        </FlexLayout>
    </ContentView.Content>
</ContentView>