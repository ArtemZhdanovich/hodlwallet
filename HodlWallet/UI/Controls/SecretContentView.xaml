<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HodlWallet.UI.Controls.SecretContentView">
    <ContentView.Content>
        <StackLayout Orientation="Vertical" Spacing="0">
            <StackLayout x:Name="HiddenLayout" Opacity="0.0">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped" />
                </StackLayout.GestureRecognizers>
            </StackLayout>
            <BoxView x:Name="CensoredContentBoxView" BackgroundColor="Black" CornerRadius="3" />
            <FlexLayout Direction="Row" HeightRequest="24">
                <ImageButton x:Name="QrCodeButton" Source="qr-code" Clicked="QrCodeButton_Clicked" FlexLayout.AlignSelf="Start" FlexLayout.Grow="1" IsVisible="False" />
                <BoxView FlexLayout.AlignSelf="Center" FlexLayout.Grow="8" />
                <ImageButton x:Name="ToggleHideButton" Source="hidden" Clicked="ToggleHideButton_Clicked" FlexLayout.AlignSelf="End" FlexLayout.Grow="1" />
            </FlexLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>
