<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HodlWallet.UI.Controls.SecretContentView">
    <ContentView.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout x:Name="HiddenLayout" Opacity="0.0" />
            <BoxView x:Name="CensoredContentBoxView" BackgroundColor="Black" />
            <StackLayout Orientation="Horizontal" HorizontalOptions="End">
                <ImageButton x:Name="ToggleHideButton" Source="hidden" Clicked="ToggleHideButton_Clicked" />
                <!--<ImageButton x:Name="QrCodeButton" Source="qr-code" Clicked="QrCodeButton_Clicked" />-->
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>
