<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HodlWallet.Core.ViewModels"
             xmlns:i18n="clr-namespace:HodlWallet.UI.Extensions.I18n"
             xmlns:svg="clr-namespace:HodlWallet.Core.Utils"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:zxcm="clr-namespace:ZXing.Common;assembly=zxing.portable"
             xmlns:zxing="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms"
             x:Class="HodlWallet.UI.Views.ShowQrCodeFromTextView"
             NavigationPage.HasNavigationBar="False"
             ios:Page.UseSafeArea="true"
             BackgroundColor="{DynamicResource Bg}"
             Title="{i18n:Translate QrCode.title}" >
    <ContentPage.BindingContext>
        <vm:ShowQrCodeFromTextViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <FlexLayout Direction="Column" >
            <StackLayout Spacing="15"
                         Margin="15, 15, 15, 0" >
                <FlexLayout Direction="Row"
                            FlexLayout.Grow="1" >
                    <Label FontSize="Title"
                           FlexLayout.Grow="1"
                           FlexLayout.AlignSelf="Center"
                           TextColor="{DynamicResource Fg}"
                           FontFamily="{StaticResource Sans-Bold}"
                           Text="{i18n:Translate Text=QrCode.title}" />

                    <FlexLayout Direction="Column"
                                FlexLayout.Grow="1"
                                FlexLayout.AlignSelf="Center" >
                        <svg:Icon WidthRequest="16"
                                  HeightRequest="16"
                                  Margin="0, 5, 0, 0"
                                  VerticalOptions="Center"
                                  FlexLayout.AlignSelf="End" 
                                  ResourceId="HodlWallet.UI.Assets.close.svg" >
                        </svg:Icon>
                        <FlexLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Close_Tapped" />
                        </FlexLayout.GestureRecognizers>
                    </FlexLayout>
                </FlexLayout>

                <ContentView FlexLayout.Grow="10" 
                             VerticalOptions="Start" >
                        <!-- Use this for debuging due to a break on Hot Reaload for ZXingBarcodeImageView -->
                        <!--<Image Source="logo.png" WidthRequest="320" HeightRequest="320"/>-->
                        <zxing:ZXingBarcodeImageView WidthRequest="320"
                                                     HeightRequest="320"
                                                     BarcodeFormat="QR_CODE"
                                                     x:Name="BarCodeImageView"
                                                     BarcodeValue="{Binding Text}" >
                            <zxing:ZXingBarcodeImageView.BarcodeOptions>
                                <zxcm:EncodingOptions Width="320" Height="320" Margin="1" PureBarcode="True" />
                            </zxing:ZXingBarcodeImageView.BarcodeOptions>
                        </zxing:ZXingBarcodeImageView>
                        <ContentView.GestureRecognizers>
                            <TapGestureRecognizer Tapped="QrCode_Tapped" NumberOfTapsRequired="1" />
                        </ContentView.GestureRecognizers>
                </ContentView>

                <ContentView FlexLayout.Grow="2" >
                    <Label Text="{Binding Text}"
                           VerticalOptions="Center"
                           TextColor="{DynamicResource Fg2}"
                           Style="{DynamicResource CustomLabel}"
                           BackgroundColor="{DynamicResource Bg2}"
                           FontFamily="{DynamicResource Mono-Regular}" >
                           <Label.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="Text_Tapped" />
                           </Label.GestureRecognizers>
                    </Label>
                </ContentView>

                <BoxView FlexLayout.Grow="2" />
            </StackLayout>

            <FlexLayout.GestureRecognizers>
                <SwipeGestureRecognizer Direction="Down" Swiped="Close_Swiped" />
            </FlexLayout.GestureRecognizers>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>
