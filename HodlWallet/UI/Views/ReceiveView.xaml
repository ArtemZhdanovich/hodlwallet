<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HodlWallet.Core.ViewModels"
             xmlns:i18n="clr-namespace:HodlWallet.UI.Extensions.I18n"
             xmlns:zxcm="clr-namespace:ZXing.Common;assembly=zxing.portable"
             xmlns:zxing="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms" 
             xmlns:svg="clr-namespace:HodlWallet.Core.Utils"
             x:Class="HodlWallet.UI.Views.ReceiveView"
             Title="{i18n:Translate Receive.title}"
             BackgroundColor="{DynamicResource Bg}">
    <ContentPage.BindingContext>
        <vm:ReceiveViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <FlexLayout Direction="Column">
            <ContentView FlexLayout.Grow="80">
                <!-- Use this for debuging due to a break on Hot Reaload for ZXingBarcodeImageView -->
                <!--<Image Source="logo.png" WidthRequest="320" HeightRequest="320"/>-->
                <zxing:ZXingBarcodeImageView x:Name="BarCodeImageView"
                                             BarcodeFormat="QR_CODE"
                                             WidthRequest="320"
                                             HeightRequest="320"
                                             BarcodeValue="{Binding Address}">
                    <zxing:ZXingBarcodeImageView.BarcodeOptions>
                        <zxcm:EncodingOptions Width="320" Height="320" Margin="1" PureBarcode="True" />
                    </zxing:ZXingBarcodeImageView.BarcodeOptions>
                </zxing:ZXingBarcodeImageView>
                <ContentView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Address_Tapped"
                                          NumberOfTapsRequired="1" />
                </ContentView.GestureRecognizers>
            </ContentView>

            <ContentView FlexLayout.Grow="0.8" 
                         HeightRequest="30">
                <Label Style="{DynamicResource CustomLabel}"
                       Text="{Binding Address}"
                       HorizontalTextAlignment="Center"
                       Margin="10"
                       FontFamily="{DynamicResource Mono-Regular}"
                       FontSize="Small" />
                <ContentView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Address_Tapped" 
                                          NumberOfTapsRequired="1" />
                </ContentView.GestureRecognizers>
            </ContentView>

            <ContentView FlexLayout.Grow="0.9" IsVisible="{Binding AmountIsVisible}" Margin="20,0,20,0">
                <StackLayout HeightRequest="30" 
                             Margin="20,0">
                    <StackLayout Orientation="Horizontal" >
                        <Label 
                               Style="{DynamicResource CustomLabel}"
                               Text="{i18n:Translate Text=Receive.amount}"
                               HorizontalOptions="StartAndExpand"
                               HorizontalTextAlignment="Start"
                               TextColor="{DynamicResource Fg3}"
                               FontFamily="{DynamicResource Mono-Regular}"
                               FontSize="Small" />

                        <svg:Icon WidthRequest="16"
                                  HeightRequest="16"
                                  HorizontalOptions="End"
                                  ResourceId="HodlWallet.UI.Assets.close.svg">
                            <svg:Icon.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CloseCommand}" />
                            </svg:Icon.GestureRecognizers>
                        </svg:Icon>
                    </StackLayout>
                    <Entry Placeholder="0"
                           Keyboard="Numeric"
                           x:Name="AmountEntry"
                           Text="{Binding Amount}"
                           FontFamily="{StaticResource Mono-Regular}"
                           TextColor="{DynamicResource FgSuccess}"
                           PropertyChanged="AmountEntry_Changed"/>
                </StackLayout>
            </ContentView>
            
            <BoxView FlexLayout.Grow="0.3" 
                     IsVisible="{Binding AmountButtonIsVisible}"/>

            <Button Margin="40,5"
                    FontSize="Large"
                    HeightRequest="50"
                    FlexLayout.Grow="0.5"
                    Clicked="AddAmountButton_Clicked"
                    Style="{DynamicResource CustomButton}"
                    BackgroundColor="{DynamicResource Bg2}"
                    IsVisible="{Binding AmountButtonIsVisible}"
                    Text="{i18n:Translate Text=Receive.requestAmount}"/>

            <Button Margin="40,5"
                    FontSize="Large"
                    HeightRequest="50"
                    FlexLayout.Grow="0.5"
                    Style="{DynamicResource CustomButton}"
                    BackgroundColor="{DynamicResource Bg2}"
                    Command="{Binding ShowShareIntentCommand}"
                    Text="{i18n:Translate Text=Receive.share}"/>
            
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>
