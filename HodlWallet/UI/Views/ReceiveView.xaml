<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HodlWallet.Core.ViewModels"
             xmlns:i18n="clr-namespace:HodlWallet.UI.Extensions.I18n"
             xmlns:zxcm="clr-namespace:ZXing.Common;assembly=zxing.portable"
             xmlns:zxing="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms" 
             xmlns:svg="clr-namespace:HodlWallet.Core.Utils"
             x:Class="HodlWallet.UI.Views.ReceiveView"
             Title="{i18n:Translate Receive.title}"
             BackgroundColor="{DynamicResource Bg}">
    <ContentPage.BindingContext>
        <vm:ReceiveViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <FlexLayout Direction="Column">
            <ContentView FlexLayout.Grow="7">
                <!-- Use this for debuging due to a break on Hot Reaload for ZXingBarcodeImageView -->
                <!--<Image Source="logo.png" WidthRequest="320" HeightRequest="320"/>-->
                <zxing:ZXingBarcodeImageView x:Name="BarCodeImageView"
                                             BarcodeFormat="QR_CODE"
                                             BarcodeValue="{Binding Address}"
                                             HeightRequest="320"
                                             WidthRequest="320">
                    <zxing:ZXingBarcodeImageView.BarcodeOptions>
                        <zxcm:EncodingOptions Height="320" 
                                              Width="320"
                                              Margin="1" 
                                              PureBarcode="True" />
                    </zxing:ZXingBarcodeImageView.BarcodeOptions>
                </zxing:ZXingBarcodeImageView>
                <ContentView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Address_Tapped"
                                          NumberOfTapsRequired="1" />
                </ContentView.GestureRecognizers>
            </ContentView>

            <ContentView FlexLayout.Grow="2" 
                         HeightRequest="30">
                <Label FontFamily="{DynamicResource Mono-Regular}"
                       FontSize="Small"
                       HorizontalTextAlignment="Center"
                       Margin="10"
                       Style="{DynamicResource CustomLabel}"
                       Text="{Binding Address}" />
                <ContentView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Address_Tapped"
                                          NumberOfTapsRequired="1" />
                </ContentView.GestureRecognizers>
            </ContentView>

            <StackLayout FlexLayout.Grow="2" 
                         Margin="20, 0">
                <StackLayout IsVisible="{Binding AmountIsVisible}"
                             Margin="45, 0">
                    <StackLayout Orientation="Horizontal">
                        <Label FontFamily="{DynamicResource Mono-Regular}"
                               FontSize="Small"
                               HorizontalOptions="StartAndExpand"
                               HorizontalTextAlignment="Start"
                               Style="{DynamicResource CustomLabel}"
                               TextColor="{DynamicResource Fg3}"
                               Text="{i18n:Translate Text=Receive.amount}"
                               VerticalOptions="Center" />

                        <svg:Icon HeightRequest="16"
                                  WidthRequest="16"
                                  HorizontalOptions="End"
                                  ResourceId="HodlWallet.UI.Assets.close.svg">
                            <svg:Icon.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CloseCommand}" />
                            </svg:Icon.GestureRecognizers>
                        </svg:Icon>
                    </StackLayout>

                    <Entry x:Name="AmountEntry"
                           FontFamily="{StaticResource Mono-Bold}"
                           Keyboard="Numeric"
                           Placeholder="0"
                           PropertyChanged="AmountEntry_Changed"
                           ReturnType="Done"
                           Text="{Binding Amount}"
                           TextColor="{DynamicResource FgSuccess}"
                           VerticalOptions="Center" />
                </StackLayout>

                <Button BackgroundColor="{DynamicResource Bg2}"
                        Clicked="AddAmountButton_Clicked"
                        FontSize="Medium"
                        HeightRequest="50"
                        IsVisible="{Binding AmountButtonIsVisible}"
                        Margin="85,5"
                        Style="{DynamicResource CustomButton}"
                        Text="{i18n:Translate Text=Receive.requestAmount}"
                        VerticalOptions="CenterAndExpand" />
            </StackLayout>

            <StackLayout FlexLayout.Grow="2">
                <Button BackgroundColor="{DynamicResource Bg2}"
                        Command="{Binding ShowShareIntentCommand}"
                        FontSize="Medium"
                        HeightRequest="80"
                        Margin="65,0,65,0"
                        Style="{DynamicResource CustomButton}"
                        Text="{i18n:Translate Text=Receive.share}"
                        VerticalOptions="EndAndExpand" />
            </StackLayout>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>