<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:HodlWallet.UI.Converters"
             xmlns:vm="clr-namespace:HodlWallet.Core.ViewModels"
             x:Class="HodlWallet.UI.Views.BackupRecoveryWordView"
             BackgroundColor="{DynamicResource BackgroundPrimary}">
    <ContentPage.BindingContext>
        <vm:BackupRecoveryWordViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <converters:IndexToStringConverter x:Key="IndexToStringConverter" />
    </ContentPage.Resources>
    <ContentPage.Content>

        <AbsoluteLayout>
            <FlexLayout Direction="Column"
                        JustifyContent="SpaceBetween"
                        AlignItems="Center"
                        BackgroundColor="{DynamicResource BackgroundPrimary}">

                <Label x:Name="Header"
                       FontFamily="{StaticResource Sans-Regular}"
                       TextColor="{DynamicResource SyncGradientStart}"
                       HorizontalTextAlignment="Center"
                       Margin="0, 20, 0, 0" />
                <!--print Mnemonic words-->

                <FlexLayout Direction="Row"
                            FlexLayout.Grow="3"
                            Wrap="Wrap"
                            JustifyContent="Center"
                            BindableLayout.ItemsSource="{Binding Words}"
                            BindableLayout.EmptyView="Mnemonic not found!"
                            Margin="0,20">

                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <ContentView BackgroundColor="{DynamicResource BackgroundSecondary}"
                                 Margin="5"
                                 HeightRequest="60"
                                 WidthRequest="100" >
                                    <Label Text="{Binding Word}"
                                       Style="{DynamicResource MnemonicLabel}"
                                       Margin="7" />
                                </ContentView>
                                <Label Text="{Binding WordIndex}"
                                       FontFamily="{StaticResource Sans-Regular}"
                                       TextColor="{DynamicResource SyncGradientStart}"
                                       FontSize="Micro"
                                       HorizontalTextAlignment="Center"
                                       Style="{DynamicResource CustomLabel}"/>
                            </StackLayout>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>

                </FlexLayout>





                <FlexLayout Direction="Row" FlexLayout.Grow="1">
                    <Button x:Name="Next"
                            Style="{DynamicResource CustomButton}"
                            BackgroundColor="{DynamicResource BackgroundSecondary}"
                            CornerRadius="0"
                            FontSize="Large"
                            FlexLayout.AlignSelf="Stretch"
                            FlexLayout.Grow="1"
                            Command="{Binding NextCommand}" />
                </FlexLayout>
            </FlexLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
