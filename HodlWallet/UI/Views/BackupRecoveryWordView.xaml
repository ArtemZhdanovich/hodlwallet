<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:HodlWallet.UI.Converters"
             xmlns:vm="clr-namespace:HodlWallet.Core.ViewModels"
             x:Class="HodlWallet.UI.Views.BackupRecoveryWordView"
             BackgroundColor="{DynamicResource BackgroundPrimary}">
    <ContentPage.BindingContext>
        <vm:BackupRecoveryWordViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <converters:IndexToStringConverter x:Key="IndexToStringConverter" />
    </ContentPage.Resources>
    <ContentPage.Content>

        <AbsoluteLayout>
            <FlexLayout Direction="Column"
                        JustifyContent="SpaceBetween"
                        AlignItems="Center"
                        BackgroundColor="{DynamicResource BackgroundPrimary}">

                <Label x:Name="Header"
                       FontFamily="{StaticResource Sans-Regular}"
                       TextColor="{DynamicResource SyncGradientStart}"
                       HorizontalTextAlignment="Center"
                       Margin="0, 20, 0, 0" />
                <!--print Mnemonic words-->
            <Grid>
                <ScrollView>
                    <Grid x:Name="gridLayout" RowDefinitions="3*,3*,3*" ColumnDefinitions="3*,3*,3*">
                     
                        </Grid>
                </ScrollView>
            </Grid>
            <FlexLayout Direction="Row" FlexLayout.Grow="1">
                    <Button x:Name="Next"
                            Style="{DynamicResource CustomButton}"
                            BackgroundColor="{DynamicResource BackgroundSecondary}"
                            CornerRadius="0"
                            FontSize="Large"
                            FlexLayout.AlignSelf="Stretch"
                            FlexLayout.Grow="1"
                            Command="{Binding NextCommand}" />
                </FlexLayout>
            </FlexLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
