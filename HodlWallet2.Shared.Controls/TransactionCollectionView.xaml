<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HodlWallet2.Shared.Controls.TransactionCollectionView">
    <ContentView.Content>
        <!-- TODO: Determine a flexible frame height. 
                   Replace 'Title' with wallet sync loading bar. -->
        <Frame
            HeightRequest="380"
            BackgroundColor="Transparent"
            CornerRadius="20"
            Padding="0">
            <StackLayout>
                <ContentView
                    Padding="10,20"
                    Margin="0"
                    HeightRequest="40">
                    <Label
                        x:Name="Title"
                        Margin="0, 20"
                        Text="Transactions"
                        TextColor="Black"
                        FontSize="20"
                        FontAttributes="Bold"
                        VerticalOptions="Center"
                        HorizontalOptions="Start" />
                </ContentView>
                <BoxView
                    BackgroundColor="{StaticResource GrayTextTint}"
                    HeightRequest="1"
                    HorizontalOptions="FillAndExpand"
                    Margin="0" />
                <CollectionView
                    BackgroundColor="{StaticResource DarkGray}"
                    ItemsSource="{Binding Transactions}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid
                                Padding="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition
                                        Height="40" />
                                    <RowDefinition
                                        Height="40" />
                                    <RowDefinition
                                        Height="40" />
                                    <RowDefinition
                                        Height="40" />
                                    <RowDefinition
                                        Height="40" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition
                                        Width="4*" />
                                    <ColumnDefinition
                                        Width="1*" />
                                </Grid.ColumnDefinitions>
                                <Label
                                    Grid.Column="0"
                                    Grid.Row="0"
                                    TextColor="{StaticResource SyncGradientStart}"
                                    Text="{Binding Status}" />
                                <Label
                                    Grid.Column="0"
                                    Grid.Row="1"
                                    TextColor="{StaticResource White}"
                                    Text="{Binding AtAddress}" />
                                <Entry
                                    Grid.Column="0"
                                    Grid.Row="2"
                                    TextColor="{StaticResource White}"
                                    Text="{Binding Memo}"
                                    IsSpellCheckEnabled="false"
                                    IsTextPredictionEnabled="false" />
                                <Label
                                    Grid.Column="0"
                                    Grid.Row="3"
                                    TextColor="{StaticResource White}"
                                    Text="{Binding Confirmations}" />
                                <Label
                                    Grid.Column="0"
                                    Grid.Row="4"
                                    TextColor="{StaticResource SyncGradientStart}"
                                    Text="{Binding IsAvailible}" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <BoxView
                    BackgroundColor="{StaticResource GrayTextTint}"
                    HeightRequest="1"
                    HorizontalOptions="FillAndExpand" />
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>
